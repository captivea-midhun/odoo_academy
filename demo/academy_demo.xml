<?xml version="1.0" encoding="utf-8"?>

<!--Description: Demo XML file-->

<odoo>
    <!--The data tag's 'noupdate' attribute specifies that the data within the file should
      not be updated and should only be loaded once when installing the module.-->
    <data noupdate="1"> 

        <!--*The record tag's 'model' attribute allows you to specify which model the record belongs to
            *The 'id' attribute is the external ID we use to reference the record.-->
        <record model="academy.course" id="erp_101">
            <field name="name">ERP 101</field>
            <field name="description">Learn ERP Systems</field>
            <field name="level">beginner</field>
        </record>

        <record model="academy.course" id="accounting_200">
            <field name="name">Accounting 200</field>
            <field name="description">
                Accounting 200:
                Intermediate Accounting Course
                Learning about Cost Account and pricing and Revenue Analysis.
            </field>
            <field name="level">intermediate</field>
        </record>

        <record model="academy.course" id="website_500">
            <field name="name">Website 500</field>
            <field name="description"></field>
            <field name="level">advanced</field>
        </record>

    </data>
</odoo>