<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--This record defines a window action (Indicated by the ir.actions.act_window value of the 'model' attribute)-->
        <record model="ir.actions.act_window" id="course_list_action">
            <field name="name">Course Things</field>
            <field name="res_model">academy.course</field>
            <field name="view_mode">tree,form</field>   <!--The text must specify the views in order ?-->

            <!--If there are no entries, then this will display a text telling the user to make their first course.-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first course</p>
            </field>
        </record>
        
        <!--Specifies all menus that will be displayed-->
            <!--This is the topmost level in menu (This is the app itself)-->
        <menuitem name="Odoo Academy 1.0" id="menu_academy" sequence="1"/>  
            <!--The 2nd level (This is the menu item in the top bar-->   
        <menuitem name="Odoo Academy Sub" id="menu_academy_sub" parent="menu_academy" sequence="2"/>  
            <!--The 3rd level (This is one of the items that can be seen in the drop down from the top bar). We will insert the windows action defined above into here-->
        <menuitem name="Courses" id="menu_academy_course" parent="menu_academy_sub" sequence="3" action="course_list_action"/>
        
    </data>
</odoo>
