<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!--This record defines a window action (Indicated by the ir.actions.act_window value of the 'model' attribute)-->
        <record model="ir.actions.act_window" id="course_list_action">
            <field name="name">Course 1</field>
            <field name="res_model">academy.course</field>
            <field name="view_mode">tree,form</field>   <!--The text must specify the views in order ?-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first course</p>
            </field>
        </record>
        
        <!--Menus that will be displayed-->
        <menuitem name="Odoo Academy Test" id="menu_academy" sequence="1"/>     <!--This is the topmost level in menu (This is the app itself)-->
        <menuitem name="Odoo Academy Sub" id="menu_academy_sub" parent="menu_academy" sequence="2"/>  <!--The 2nd level (This is the menu item in the top bar-->
        <menuitem name="Courses" id="menu_academy_course" parent="menu_academy_sub" sequence="3" action="course_list_action"/> <!--The 3rd level (This is one of the items that can be seen in the drop down from the top bar)-->
        
    </data>
</odoo>