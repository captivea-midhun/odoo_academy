<?xml version="1.0" encoding="utf-8"?>   <!--UTF encoding that goes at the top of xml files--> <!---->


<odoo>
    <data>

        <record model="ir.ui.view" id="session_view_form">
            <field name="name">academy.session.form</field>
            <field name="model">academy.session</field>

            <field name='arch' type='xml'>
                <form string='Session Form'>
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name='course_id'/>    <!--This will be the one course that this session is associated with (one2many)-->
                            </group>

                            <group>
                                <field name='instructor_id'/>  <!--This will be the one instructor that this session is associated with (one2many)-->
                            </group>
                        </group>

                        <!--This is be the many students that are associated with this course (many2one)-->
                        <notebook>
                            <page string='Student'>
                                <field name='student_ids'/>
                            </page>
                        </notebook>
                    </sheet>        
                </form>
            </field>
        </record>

        <record model='ir.ui.view' id='session_view_list'>
            <field name='name'>academy.session.list</field>
            <field name='model'>academy.session</field>

            <field name='arch' type='xml'>
                <tree string= 'Session List'>
                    <field name='name'/>
                    <field name='instructor_id'/>
                </tree>
            </field>
        </record>

    </data>
</odoo>