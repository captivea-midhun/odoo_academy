<?xml version="1.0" encoding="utf-8"?>   <!--UTF encoding that goes at the top of xml files--> <!---->
<odoo>
    <data>

        <!--View type 1: Form view-->
        <record model="ir.ui.view" id="course_view_form">   <!--attribute id is the external ID-->
            <field name="name">academy.course.form</field>  <!--Technical name of current record-->
            <field name="model">academy.course</field>      <!--Name of model (This is how you specify which model this view will belong to)-->

            <!--Within a field tag specified with the 'name' attribute set to 'arch' is where you place a given view-->
            <field name="arch" type="xml">
                <form string="Course Form">

                <!--Sheets are visually represented as a white box, inside which other components and fields of your choice populate-->
                    <sheet>
                        <h1><field name="name"/></h1>    

                        <!--Displays 2 groups (Having two groups in a bigger group display them side by side)-->
                        <group>
                            <!--This group will display the checkbox (Boolean type) and a drop down (Selection type) 
                                that was initialized in the corresponding model-->
                            <group>
                                <field name="active"/>
                                <field name="level"/>
                            </group>
                                
                            <group>
                                <field name='base_price'/>
                                <field name='additional_fee'/>
                                <field name='total_price' force_save='1'/>  <!--This field is readonly so, 'force_save' forces field to change on the onchange-->
                            </group>
                        </group>

                        <!--A notebook that consists of pages (aka tabs)-->
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string='Sessions'>
                                <field name='session_ids'/>
                            </page>
                            <page string='Stuff'>
                                <field name='test1'/>
                            </page>
                        </notebook>
                    
                    </sheet>
                </form>
            </field>
        </record>


        <!--View type 2: Tree view (aka list view)-->
        <record model="ir.ui.view" id="course_view_list">
            <field name="name">academy.course.list</field>
            <field name="model">academy.course</field>

            <field name="arch" type="xml">
                <!--List views are sequentially represented in a list like format.-->
                <tree string="Course List">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="level"/>
                </tree>
            </field>
        </record>


        <!--View type 3: Search view-->
        <record model="ir.ui.view" id="course_search_view">
            <field name="name">academy.course.search</field>
            <field name="model">academy.course</field>

            <field name="arch" type="xml">
                <!--Search views simply allow search functionality for the elements you specify (In this case, for the name &  descripton fields)-->
                <search>
                    <field name="name"/>
                    <field name="description"/>
                </search>
            </field>
        </record>

    </data>
</odoo>